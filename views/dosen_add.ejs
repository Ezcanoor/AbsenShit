<%- include("partials/header.ejs", { title: "Add Dosen"}) %>
</head>
<body>
    <h1>Add Dosen</h1>
    <form method="POST" action="/dosen/add"> 
        <label for="name">Name:</label><br>
        <input type="text" id="name" name="name" placeholder="e.g: John Doe"><br><br>
        <label for="Tanggal_Lahir">Tanggal Lahir:</label><br>
        <input type="date" id="Tanggal_Lahir" name="Tanggal_Lahir"><br><br>
        <label for="email">E-mail:</label><br>
        <input type="text" id="email" name="email" placeholder="e.g: dosenHacktiv8@hacktiv8.com"><br><br>
        <label>Gender</label><br/>
        <input type="radio" name="gender" value="Male">
        <label>Male</label>
        <input type="radio" name="gender" value="Female">
        <label>Female</label>
        <button type="submit">Save</button>
        <a href="/dosen">Cancel</a>
    </form> 
    <% errors.forEach(el => { %>
        <p style="color: red;"><%= el %></p>
    <% }) %>
    <%- include("partials/footer.ejs")%></br>