<%- include("partials/header.ejs", { title: "Add Subject"}) %>
</head>
<body>
    <h1>Add Subject</h1>
    <form method="POST" action="/subject/add"> 
        <label for="name">Name:</label><br>
        <input type="text" id="name" name="name" placeholder="e.g: Basic Algorithm"><br><br>
        <label for="day">Day:</label><br>
        <input type="text" id="day" name="day" placeholder="e.g: Tuesday, Friday"><br><br>
        <label for="time">Time:</label><br>
        <input type="text" id="time" name="time" placeholder="e.g: 11.00-13.00 / 17.00-19.00"><br><br>
        <label for="lecturerId">Lecturer:</label><br>
        <select name="lecturerId" id="lecturerId">
            <option selected disabled>--please select--</option>
            <% lecturer.forEach(lecturer=> { %>
                <option value="<%=lecturer.id%>"><%=lecturer.name%></option>
           <% })%>
        </select><br><br>
        <button type="submit">Save</button>
        <a href="/subject">Cancel</a>
    </form> 
    <% errors.forEach(el => { %>
        <p style="color: red;"><%= el %></p>
    <% }) %>
    <%- include("partials/footer.ejs")%></br>